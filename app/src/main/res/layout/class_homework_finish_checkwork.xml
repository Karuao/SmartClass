<?xml version="1.0" encoding="utf-8"?>
<!--点击一个已经结束的作业后跳转到的页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/class_top"
        android:layout_height="45dp"
        android:layout_width="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/title"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/iv_class_top1_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:onClick="toBack"
                    android:background="#00000000"
                    android:src="@drawable/left_goback"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/head2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="作业已结束"
                    android:textSize="21sp"
                    android:textColor="@color/bg_white"
                    android:textStyle="normal"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_class_homework_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="作业名"
            android:textColor="@color/bg_black"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_class_homework_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:width="120dp"
            android:text="xxxx奥术大师大xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:layout_below="@+id/tv_class_homework_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/little_black"/>





    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="5dp"
        android:background="#d6d6d6" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/btn_homwork_check"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button"
            android:onClick="toCheck"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的作业"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>