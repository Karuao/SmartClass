<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    >


    <TextView
        android:id="@+id/tv_class_getExp_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="经验值获取方式"
        android:textColor="#444"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_class_getExp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_class_getExp_way"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="时间"
        android:textColor="#898989"
        android:textSize="12sp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/exp_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginTop="8dp"
            android:textColor="@color/classbottom"/>

        <TextView
            android:id="@+id/tv_class_getExp_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="?"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_yellow"
            android:textSize="20dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="经验值"
            android:textColor="@color/classbottom"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>