<!--班课页面的底部导航栏-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_class_resource"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_class_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/class_resource_select" />

            <TextView
                android:id="@+id/tv_class_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源"
                android:textColor="@color/classbottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_class_member"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_class_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/class_member_select" />

            <TextView
                android:id="@+id/tv_class_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成员"
                android:textColor="@color/classbottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_class_homework"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_class_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/class_homework_select" />

            <TextView
                android:id="@+id/tv_class_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业"
                android:textColor="@color/classbottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_class_inform"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_class_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/class_inform_select" />

            <TextView
                android:id="@+id/tv_class_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知"
                android:textColor="@color/classbottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_class_classinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_class_classinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/class_classinfo_select" />

            <TextView
                android:id="@+id/tv_class_classinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textColor="@color/classbottom" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>