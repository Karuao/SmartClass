<?xml version="1.0" encoding="utf-8"?>
<!--找回密码的第三个页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:onClick="toBack"
            android:src="@drawable/back" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/head2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_box">

        <EditText
            android:id="@+id/edt_retrievePass"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ems="15"
            android:hint="请重新输入密码"
            android:textColorHint="@color/hint"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_box">

        <EditText
            android:id="@+id/edt_retrievePassConfirm"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ems="15"
            android:hint="确认密码"
            android:textColorHint="@color/hint"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_retrieve_3"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:onClick="toNext_three"
            android:padding="2dp"
            android:text="完成修改"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>