<!--发布通知的listviewitem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_class_inform_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="发布时间"
        android:textColor="@color/hinter"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_commitstu_sno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_class_inform_time"
        android:layout_centerHorizontal="true"
        android:width="120dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="xxxx奥术大师大xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/bg_black"
        android:textSize="21sp" />


    <TextView
        android:id="@+id/tv_if_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_class_inform_time"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="TextView"
        android:visibility="invisible" />



    <TextView
        android:id="@+id/tv_inform_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_commitstu_sno"
        android:layout_alignLeft="@+id/tv_class_inform_time"
        android:layout_alignStart="@+id/tv_class_inform_time"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_commitstu_sno"
        android:width="500dp"
        android:height="1dp"
        android:background="@color/hint"
        android:text="TextView" />



</RelativeLayout>
