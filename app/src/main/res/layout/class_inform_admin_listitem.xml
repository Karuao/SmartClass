<?xml version="1.0" encoding="utf-8"?>
<!--管理员消息的listviewitem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_class_inform_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_class_inform_people"
        android:layout_alignBottom="@+id/tv_class_inform_people"
        android:layout_alignLeft="@+id/txt_commitstu_sno"
        android:layout_alignStart="@+id/txt_commitstu_sno"
        android:text="发布时间"
        android:textColor="@color/hinter"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_class_inform_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="查阅人数"
        android:layout_alignParentRight="true"
        android:textColor="@color/hinter"
        android:layout_marginRight="15dp"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_commitstu_sno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_class_inform_time"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:width="120dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="xxxx奥术大师大xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/bg_black"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/tv_inform_id"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_commitstu_sno"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/tv_class_inform_people"
        android:layout_toStartOf="@+id/tv_class_inform_people"
        android:text="TextView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_commitstu_sno"
        android:width="500dp"
        android:height="1dp"
        android:background="@color/hint"
        android:text="TextView" />


</RelativeLayout>