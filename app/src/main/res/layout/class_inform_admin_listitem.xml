<?xml version="1.0" encoding="utf-8"?>
<!--管理员消息的listviewitem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/tv_class_inform_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="x人已读"
            android:textColor="@color/classbottom"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_commitstu_sno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="Text"
        android:textColor="#444"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_class_inform_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_commitstu_sno"
        android:layout_alignStart="@+id/txt_commitstu_sno"
        android:layout_below="@+id/txt_commitstu_sno"
        android:text="发布时间"
        android:textColor="#898989"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/tv_inform_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/tv_class_inform_time"
        android:layout_alignRight="@+id/tv_class_inform_time"
        android:text="TextView"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_class_inform_time"
        android:width="500dp"
        android:height="1dp"
        android:background="@color/hint"
        android:text="TextView" />


</RelativeLayout>