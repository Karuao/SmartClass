<?xml version="1.0" encoding="utf-8"?><!--主页面的班课页面的顶部标签栏-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/class_top"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:src="@drawable/head2" />

    <TextView
        android:id="@+id/txt_titlebar_classname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="5"
        android:singleLine="true"
        android:text="班课"
        android:textColor="@color/bg_white"
        android:textSize="21sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/llayout_addibtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/iv_add_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="toCreateList"
            android:src="@drawable/add" />

    </LinearLayout>

</LinearLayout>