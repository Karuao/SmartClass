<?xml version="1.0" encoding="utf-8"?>
<!--管理员的班课详情页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include android:id="@+id/top" layout="@layout/class_tab01_top" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/img_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_class_img"
            />
        <TextView
            android:id="@+id/tv_class_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="课程名"
            android:textColor="#444"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/img_class"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_class_classnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_class_classname"
            android:layout_toRightOf="@+id/img_class"
            android:text="班级"
            android:textColor="#898989"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_class_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_class_classname"
            android:layout_toRightOf="@+id/img_class"
            android:text="老师"
            android:layout_marginTop="20dp"
            android:textColor="#898989"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_class_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_class_classname"
            android:layout_toRightOf="@+id/tv_class_teacher"
            android:text="学校"
            android:layout_marginTop="20dp"
            android:textColor="#898989"
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_class_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_class_classname"
            android:layout_toRightOf="@+id/tv_class_university"
            android:text="院系"
            android:layout_marginTop="20dp"
            android:textColor="#898989"
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <TextView
            android:id="@+id/tv_class_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="邀请码"
            android:textColor="@color/bg_black"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_class_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:width="120dp"
            android:text="335568"
            android:layout_below="@+id/tv_class_c"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_yellow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许加入"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/bg_black"
            />

        <CheckBox
            android:id="@+id/chk_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:buttonTint="@color/title"
            android:checked="true"
            android:duplicateParentState="false"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_class_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑班课"
            android:textColor="@color/classbottom"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_goview"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_class_finishclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束班课"
            android:textColor="@color/text_yellow"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束班课后无法发布资源及作业，只能查看已有资源和已结束作业"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_class_deleteclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除班课"
            android:textColor="@color/colorRank"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d6d6d6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="只有已结束的班课可以删除"/>

</LinearLayout>