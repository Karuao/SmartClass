<?xml version="1.0" encoding="utf-8"?>
<!--评价中未评价的学生的listviewitem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_homework_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="姓名"
        android:textColor="@color/bg_black"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_class_inform_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:width="120dp"
        android:text="201540704891"
        android:layout_below="@+id/txt_homework_title"
        android:layout_marginLeft="8dp"
        android:textColor="@color/hinter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/colorRank"
        android:text="尚未评价"/>

    <ImageView
        android:id="@+id/iv_class_homework_admin_goview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_goview_black"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="3dp"/>





</RelativeLayout>